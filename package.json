{
  "name": "svelte-multiselect",
  "description": "Svelte multi-select component",
  "author": "Janosh Riebesell <janosh.riebesell@gmail.com>",
  "homepage": "https://janosh.github.io/svelte-multiselect",
  "repository": "https://github.com/janosh/svelte-multiselect",
  "license": "MIT",
  "version": "8.3.0",
  "type": "module",
  "svelte": "index.js",
  "bugs": "https://github.com/janosh/svelte-multiselect/issues",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "serve": "vite build && vite preview",
    "check": "svelte-check --ignore package",
    "test": "vitest --run --coverage tests/unit/*.ts && playwright test tests/*.test.ts",
    "test:unit": "vitest tests/unit/*.ts",
    "test:e2e": "playwright test tests/*.test.ts",
    "changelog": "npx auto-changelog --package --output changelog.md --unreleased-only --hide-credit --commit-limit false",
    "update-coverage": "vitest tests/unit --run --coverage && npx istanbul-badges-readme"
  },
  "devDependencies": {
    "@iconify/svelte": "^3.1.0",
    "@playwright/test": "^1.30.0",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.5.5",
    "@sveltejs/package": "1.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitest/coverage-c8": "^0.28.4",
    "eslint": "^8.34.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "hastscript": "^7.2.0",
    "highlight.js": "^11.7.0",
    "jsdom": "^21.1.0",
    "mdsvex": "^0.10.6",
    "mdsvexamples": "^0.3.3",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "svelte-toc": "^0.5.2",
    "svelte-zoo": "^0.2.4",
    "svelte2tsx": "^0.6.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  },
  "keywords": [
    "svelte",
    "multi-select",
    "single-select",
    "form",
    "input"
  ],
  "publishConfig": {
    "access": "public"
  }
}
